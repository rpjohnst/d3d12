<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="14.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup Label="UserMacros">
    <BuildDir>$(SolutionDir)build\$(PlatformName)\$(Configuration)\</BuildDir>
    <AssetDir>$(SolutionDir)assets\</AssetDir>

    <IntermediateDir>$(BuildDir)intermediates\$(ProjectName)\</IntermediateDir>
    <BinDir>$(BuildDir)bin\</BinDir>
    <GameDir>$(BuildDir)game\</GameDir>
    <DataDir>$(GameDir)data\</DataDir>
  </PropertyGroup>

  <PropertyGroup>
    <OutDir>$(BinDir)</OutDir>
    <IntDir>$(IntermediateDir)</IntDir>
  </PropertyGroup>
</Project>
